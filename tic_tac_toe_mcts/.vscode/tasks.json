{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release: build",
            "type": "shell",
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=release release"
            ]
        },
        {
            "label": "Release: build & run",
            "type": "shell",
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=release rel_run"
            ]
        },
        {
            "label": "Release: build & serve",
            "type": "shell",
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=release serve"
            ]
        },
        {
            "label": "Debug: build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=debug debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Debug: build & run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=debug dbg_run"
            ]
        },
        {
            "label": "Debug: build & log",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=debug debug && ./bin/debug/main > ./bin/debug/log.log"
            ]
        },
        {
            "label": "Debug: build & serve",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make TARGET_ENV=emscripten BUILD_ENV=debug serve"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "powershell"
            },
            "linux": {
                "command": "bash"
            },
            "args": [
                "-c",
                "make clean"
            ]
        }
    ]
}